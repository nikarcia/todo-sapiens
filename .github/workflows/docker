name: Azure Docker Deploy

on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Azure Login
      uses: azure/login@v1
      with:
        creds: ${{ secrets.AZURE_CREDENTIALS }}

    - name: Build and push Docker image to Azure Container Registry
      uses: azure/docker-login@v1
      with:
        login-server: your-azure-container-registry.azurecr.io
        username: ${{ secrets.ACR_USERNAME }}
        password: ${{ secrets.ACR_PASSWORD }}
    - run: docker build -t your-azure-container-registry.azurecr.io/your-docker-image:latest .
    - run: docker push your-azure-container-registry.azurecr.io/your-docker-image:latest

    - name: Deploy to Azure App Service
      uses: azure/webapps-deploy@v2
      with:
        app-name: your-azure-app-service
        images: your-azure-container-registry.azurecr.io/your-docker-image:latest
